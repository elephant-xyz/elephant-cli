{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "esnext.disposable", "DOM", "DOM.Iterable"],
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "vitest.config.ts"
  ]
}
